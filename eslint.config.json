{
  "overrides": [
    {
      "files": ["**/*.{js,mjs,cjs,ts,mts,cts}"],
      "plugins": ["js"],
      "extends": ["eslint:recommended"],
      "env": {
        "node": true,
        "es2021": true
      },
      "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module",
        "project": "./tsconfig.json"
      }
    },
    {
      "extends": ["plugin:@typescript-eslint/recommended"]
    }
  ]
}
